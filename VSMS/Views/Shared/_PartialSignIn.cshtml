@model VSMS.Models.DataModels.Member

@Html.AntiForgeryToken()


<div class="group">
    <label for="user" class="label">Username</label>
    <input id="UserName" name="UserName" type="text" class="input" value="@((ViewBag.username!= null ) ? ViewBag.username:"")">
</div>
<div class="group">
    <label for="pass" class="label">Password</label>
    <input id="PassWord" name="PassWord" type="password" class="input" data-type="password" value="@((ViewBag.password!= null ) ? ViewBag.password:"")">
</div>
<div class="group">
    <input id="check" type="checkbox" class="check" checked>
    <label for="check"><span class="icon"></span> Keep me Signed in</label>
</div>
@if (ViewBag.Msg != null)
{
    <div class="group">
        <!-- Error Message -->
        <p style="color: red">@ViewBag.Msg</p>
    </div>
}

