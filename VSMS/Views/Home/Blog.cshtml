@model IEnumerable<VSMS.Models.DataModels.Post>
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tt-breadcrumb">
    <div class="container">
        <ul>
            <li><a href="@Url.Action("Index","Home")">Home</a></li>
            <li>Blog Posts</li>
        </ul>
    </div>
</div>
<div id="tt-pageContent">
    <div class="container-indent-04">
        <div class="container">
            <div class="tt-block-title tt-sub-pages">
                <h1 class="tt-title">Blog Posts</h1>
                <div class="tt-description">Read our latest blog posts</div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-8 col-lg-9 blog-center-right">
                    <div class="tt-listing-post">
                        @foreach (var item in Model)
                        {
                            var day = item.CreatedAt.Day; 
                            var month = item.CreatedAt.ToString("MMM");
                            <div class="tt-post">
                                <div class="tt-post-img">
                                    <a href="@Url.Action("BlogSingle","Home", new { id= item.Id})"><img src="@item.Image" alt=""></a>
                                </div>
                                <div class="tt-post-content">
                                    <div class="tt-meta">
                                        <div class="tt-time">
                                            <span>@day</span>
                                            @month
                                        </div>
                                        <div class="tt-autor">
                                            Written by <span>Admin</span>
                                        </div>
                                    </div>
                                    <h2 class="tt-title"><a href="@Url.Action("BlogSingle","Home", new { id= item.Id})">@item.Title</a></h2>
                                    <div class="tt-description">
                                        @item.Summary
                                    </div>
                                    <div class="tt-btn">
                                        <a href="@Url.Action("BlogSingle","Home", new { id= item.Id})" class="tt-link">read more</a>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="tt-post">
                            <div class="tt-post-img">
                                <div class="tt-post-music">
                                    <iframe src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/139636914&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false"></iframe>
                                </div>
                            </div>
                            <div class="tt-post-content">
                                <div class="tt-meta">
                                    <div class="tt-time">
                                        <span>30</span>
                                        Apr
                                    </div>
                                    <div class="tt-autor">
                                        Written by <span>Admin</span>
                                    </div>
                                </div>
                                <h2 class="tt-title"><a href="blog-single-post.html">7 of the Best Car Salesman Tips for New Hires</a></h2>
                                <div class="tt-description">
                                    Even as the auto sales industry works to reduce dealership paperwork procedures, it can still feel like you spend a small fortune on paper and ink. Thankfully, there’s a simple way to reduce paper and cut costs – even with changing compliance guidelines and new forms to send home with customers.
                                </div>
                                <div class="tt-btn">
                                    <a href="blog-single-post.html" class="tt-link">read more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-4 col-lg-3 rightColumn">
                    <div class="tt-block02-aside">
                        <h3 class="tt-block02-title">Popular Tags</h3>
                        <div class="tt-block02-content">
                            <ul class="tt-list-box">
                                @foreach (var item in ViewBag.tags)
                                {
                                    <li><a href="#">@item.Slug</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="tt-block02-aside">
                        <h3 class="tt-block02-title">Featured Posts</h3>
                        <div class="tt-block02-content">
                            @foreach (var item in Model)
                            {
                                var day = item.CreatedAt.Day;
                                var month = item.CreatedAt.ToString("MMM");
                                <div class="tt-post">
                                    <div class="tt-post-img">
                                        <a href="@Url.Action("BlogSingle","Home", new { id= item.Id})"><img src="@item.Image" alt=""></a>
                                    </div>
                                    <div class="tt-post-content">
                                        <div class="tt-meta">
                                            <div class="tt-time">
                                                <span>@day</span>
                                                @month
                                            </div>
                                            <div class="tt-autor">
                                                Written by <span>Admin</span>
                                            </div>
                                        </div>
                                        <h2 class="tt-title"><a href="@Url.Action("BlogSingle","Home", new { id= item.Id})">@item.Title</a></h2>
                                        <div class="tt-description">
                                            @item.Summary
                                        </div>
                                        <div class="tt-btn">
                                            <a href="@Url.Action("BlogSingle","Home", new { id= item.Id})" class="tt-link">read more</a>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-indent container-indent-03 tt-mobile-hidden">
        <div class="tt-map">
            <a href="#" class="tt-btn-toggle"></a>
            <div class="tt-box-map">
                <div id="googleMapFooter" class="google-map"></div>
            </div>
        </div>
    </div>
</div>

