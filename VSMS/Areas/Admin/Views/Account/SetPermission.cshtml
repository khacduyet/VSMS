@model VSMS.Models.Admin

@{
    ViewBag.Title = "SetPermission";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHome.cshtml";
}

<h2>Set Permission</h2>

@using (Html.BeginForm("SetPermission", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Admin</h4>
        <hr />
        <input hidden name="id" value="@ViewBag.id" />
        <div class="form-group">
            <label class = "control-label col-md-2">User Name</label>
            <div class="col-md-10">
                <input name="Username" value="@Model.Username" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                <input name="Name" value="@Model.Name" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label>Permission</label>
            <div class="col-md-10">
                @Html.DropDownList("Id_per", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
</div>
