@model VSMS.Models.Admin

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHome.cshtml";
}

<h2>Change Password</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Username)
        @Html.HiddenFor(model => model.Email)
        @Html.HiddenFor(model => model.Name)

        <div class="form-group">
            <label class = "control-label col-md-2" >Old Password: </label>
            <div class="col-md-10">
                <input type="password" name="OldPass" value="" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">New Password: </label>
            <div class="col-md-10">
                <input type="password" name="Password" value="" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Confirm  Password: </label>
            <div class="col-md-10">
                <input type="password" name="ConPass" value="" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Index", "Index", null, new {@class = "btn btn-warning" })
</div>
