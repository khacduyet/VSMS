@model IEnumerable<VSMS.Models.DataModels.Member>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHome.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>Order</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a href="/Admin/Order/CreateOrder/id=@Html.DisplayFor(modelItem => item.Id)" id="addRecordOrder" class="btn btn-primary"><i class="fas fa-tag"></i></a>
            </td>
            <td>
                <a href="@Url.Action("Edit","Edit", new { id = item.Id})" class="btn btn-success"><i class="fas fa-edit"></i></a>
                <a href="@Url.Action("Details","Details", new { id = item.Id})" class="btn btn-info"><i class="fas fa-info"></i></a>
                <a href="@Url.Action("Delete","Delete", new { id = item.Id})" class="btn btn-danger"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
    }

</table>
